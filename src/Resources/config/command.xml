<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="env.command.check" class="SymEnvSync\SymfonyEnvSync\Command\CheckCommand" public="false">
            <tag name="console.command" command="env:check" />
        </service>

        <service id="env.command.diff" class="SymEnvSync\SymfonyEnvSync\Command\DiffCommand" public="false">
            <tag name="console.command" command="env:diff" />
        </service>

        <service id="env.command.sync" class="SymEnvSync\SymfonyEnvSync\Command\SyncCommand" public="false">
            <tag name="console.command" command="env:sync" />
        </service>

    </services>

</container>